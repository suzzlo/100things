<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
<head>
	<title><%= yield(:title) || "Untitled"%></title>
	<%=stylesheet_link_tag 'application' %>
	<%= javascript_include_tag :defaults %>
	<%= csrf_meta_tag %>
	<%= yield (:head) %>
</head>
<body>
	<div id="header">
		<img src="/images/logo.png" />
	</div>
	
	<div id="container">
	
		<!-- Session options -->
		<div id="user_nav">
			<% if user_signed_in? %>
				<%= current_user.email %> | <%= link_to "Sign out" , destroy_user_session_path %>
			<% else %>
				<%= link_to "Sign up" , new_user_registration_path %> | <%= link_to "Sign in" , new_user_session_path %>
			<% end %>
		</div>
	
		<!-- User menu options -->
		<div id="user_session">
			<% if user_signed_in? %>
				<%= link_to "Things", things_path %>
				<%= link_to "Categories",  categories_path %>
			<% end %>
		</div>
	
		<% flash.each do |name, msg| %>
			<p style="color: green"><%= content_tag :div, msg, :id => "flash_#{name}" %></p>
		<% end %>
		
		

    	<%= yield %>
	</div>
</body>
</html>
