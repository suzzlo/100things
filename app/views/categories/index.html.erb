<h1>Listing categories [<span style='text-align:right'><%= link_to 'Add New', new_category_path %></span>]</h1>

<table>
<% @categories.each do |category| %>
  <tr>
	<td>
		<span id='category' style='background-color:<%= category.background_color %>;color:<%= category.text_color %>'>
			<%= category.name %>
		</span>
	</td>
    <td><%= category.description %></td>
    <td><%= link_to 'Show', category %></td>
    <td><%= link_to 'Edit', edit_category_path(category) %></td>
    <td><%= link_to 'Destroy', category, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
